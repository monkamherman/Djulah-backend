{
  "name": "djulah-backend-vercel",
  "version": "1.0.0",
  "description": "Djulah Backend API - Vercel Deployment",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "node --watch backend/server.js",
    "build": "cd backend && npm install",
    "migrate": "cd backend && node scripts/migrate-simple.js migrate",
    "migrate:check": "cd backend && node scripts/migrate-simple.js check"
  },
  "keywords": [
    "restaurant",
    "management",
    "api",
    "nodejs",
    "express",
    "vercel"
  ],
  "author": "Djulah Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "express": "^5.1.0",
    "mongoose": "^8.0.0",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "dotenv": "^17.2.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "cloudinary": "^2.9.0",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^2.2.1",
    "nodemailer": "^8.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  }
}
